using System;

namespace MyProject
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Debug Mode!");
        }
    }
}
function main() {
    console.log("Debug Mode!");
    let x = 10;
    let y = 20;
    let z = x + y;
    console.log(`z = ${z}`);
}

main();
